{
  "name": "lbc-bot",
  "version": "1.0.0",
  "description": "Le Bon Coin scraping bot with AI price estimation",
  "scripts": {
    "dev": "next dev",
    "prebuild": "prisma generate",
    "build": "MIGRATE=1 prisma migrate deploy && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate && (test -z \"$VERCEL\" && playwright install chromium || true)",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:clear": "tsx prisma/clear-db.ts",
    "scrape": "tsx src/cli/scrape.ts",
    "scrape:references": "tsx src/cli/run-scrapers.ts",
    "analyze": "tsx src/cli/analyze.ts",
    "notify": "tsx src/cli/notify.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@prisma/adapter-pg": "7.0.1",
    "@prisma/client": "7.0.1",
    "@sparticuz/chromium": "^133.0.0",
    "cloudinary": "^2.8.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "next": "^16.0.4",
    "openai": "^4.73.0",
    "pg": "^8.13.1",
    "playwright": "^1.53.0",
    "playwright-core": "^1.53.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "resend": "^4.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "baseline-browser-mapping": "^2.8.32",
    "eslint": "^9.15.0",
    "eslint-config-next": "^16.0.4",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "prisma": "7.0.1",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.14"
  },
  "packageManager": "pnpm@10.12.4",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
